<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/purple_500"
    app:cardElevation="5dp"
    android:id="@+id/genre_root"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/recycler_view_item"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/recyclerview_main_card"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/recyclerview_main_image"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/worship" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/transparent"
                android:id="@+id/recyclerview_main_framelayout"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recyclerview_main_text"
                    android:padding="16dp"
                    android:fontFamily="@font/comfortaa"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Recycler item"
                    android:textSize="20sp"
                   android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

            </FrameLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>