<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginBottom="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/each_album_artist_root"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/all_artist_parent_track"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:background="@color/white_ex"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/each_album_image_container"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:cardCornerRadius="6dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/each_album_track_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:src="@color/light_grey" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/each_album_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/dm_serif_display_regular"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:text="Artist Name"
                android:textColor="@color/text_black"
                android:textSize="20sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/each_album_track_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:singleLine="true"
                android:text="Track rank"
                android:textColor="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="4dp"
                android:clickable="false"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/each_album_track_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:autoLink="all"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="4dp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:text="Play Track Online"
                    android:textSize="16sp"/>

<!--                <com.google.android.material.imageview.ShapeableImageView-->
<!--                    android:id="@+id/each_album_track_loading"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:scaleType="centerInside"-->
<!--                    android:src="@drawable/next"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent" />-->

            </LinearLayout>
            <!--         <com.google.android.material.textview.MaterialTextView-->
            <!--             android:id="@+id/top_track_artist_full_album"-->
            <!--             android:layout_width="match_parent"-->
            <!--             android:layout_height="wrap_content"-->
            <!--             android:layout_marginTop="4dp"-->
            <!--             android:autoLink="all"-->
            <!--             android:paddingStart="10dp"-->
            <!--             android:paddingEnd="4dp"-->
            <!--             android:textColor="@color/purple_500"-->
            <!--             android:fontFamily="@font/open_sans"-->
            <!--             android:gravity="center_vertical"-->
            <!--             android:text="Full album Link"-->
            <!--             android:textSize="16sp"/>-->

            <Button
                android:layout_width="match_parent"
                android:id="@+id/each_album_btn_play_track_preview"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:text="Play Preview"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>




</androidx.cardview.widget.CardView>
